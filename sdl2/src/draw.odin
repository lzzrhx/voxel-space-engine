draw_ui_add_drawn_area :: proc(ui_layer: ^Ui_Layer, x0, y0, width, height: int) {
    if (ui_layer.drawn_areas.num < len(ui_layer.drawn_areas.data)) {
        ui_layer.drawn_areas.data[ui_layer.drawn_areas.num] = Rect{x0, y0, width, height}
        ui_layer.drawn_areas.num += 1
    }
}

draw_ui_int :: proc(ui_layer: ^Ui_Layer, m, x, y: int, color: u32) {
    num_digits := int_num_digits(m)
    draw_ui_add_drawn_area(ui_layer, x, y, num_digits * (CHAR_WIDTH + CHAR_SPACING),  CHAR_HEIGHT)
    for i, n := num_digits, m; n > 0;  {
        draw_digit(ui_layer.colorbuffer, n%10, x + (i-1) * (CHAR_WIDTH + CHAR_SPACING), y, color)
        n /= 10
        i -= 1
    }
}

draw_ui_string :: proc(ui_layer: ^Ui_Layer, txt: string, x, y: int, color: u32) {
    draw_ui_add_drawn_area(ui_layer, x, y, len(txt) * (CHAR_WIDTH + CHAR_SPACING),  CHAR_HEIGHT)
    for c, i in txt {
        if c != ' ' { draw_rune(ui_layer.colorbuffer, c, x + i * (CHAR_WIDTH + CHAR_SPACING), y, color) }
    }
}
